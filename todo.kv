<TodoLayout>:
    orientation: 'vertical'
    padding: [20, 10]
    spacing: 10
    
    BoxLayout:
        size_hint: 1, None
        height: 60
        spacing: 10
        padding: [0, 10]

        Button:
            text: 'เพิ่มงาน'
            on_press: app.add_task(root.ids.task_input.text)
            font_name: 'BoonJot-Italic'
            background_color: app.pastel_blue  # Pastel Blue
            color: app.dark_text  # Dark Text
            size_hint_x: 0.5
            font_size: 16
        
        Button:
            text: 'ลบงานทั้งหมด'
            on_press: app.clear_tasks(None)
            font_name: 'BoonJot-Italic'
            background_color: app.pastel_pink  # Pastel Pink
            color: app.dark_text  # Dark Text
            size_hint_x: 0.5
            font_size: 16

    TextInput:
        id: task_input
        hint_text: 'กรุณากรอกงานใหม่'
        size_hint: 1, None
        height: 50
        on_text_validate: app.add_task(task_input.text)
        font_name: 'BoonJot-Italic'
        background_color: app.pastel_gray  # Pastel Gray
        foreground_color: app.dark_text  # Dark Text
        hint_text_color: app.dark_text  # Dark Text
        padding: [10, 10]
        font_size: 16
    
    ScrollView:
        size_hint: 1, 1
        
        BoxLayout:
            id: task_layout
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: [0, 10, 0, 0]
            spacing: 10
    
    GridLayout:
        cols: 2
        size_hint_y: None
        height: 100
        spacing: 10
        padding: [0, 10]
        
        Label:
            text: "จัดเรียงตาม:"
            font_name: 'BoonJot-Italic'
            color: app.dark_text  # Dark Text
            halign: 'center'
            font_size: 16
        
        Spinner:
            text: "ชื่อ"
            values: ("ชื่อ", "วันที่")
            font_name: 'BoonJot-Italic'
            background_color: app.pastel_blue  # Pastel Blue
            color: app.dark_text  # Dark Text
            on_text: app.sort_tasks
            size_hint_x: 0.8
            font_size: 14
        
        Label:
            text: "เปิดการแจ้งเตือน"
            font_name: 'BoonJot-Italic'
            color: app.dark_text  # Dark Text
            halign: 'center'
            font_size: 16
        
        Switch:
            active: True
            on_active: app.toggle_notifications
            size_hint_x: 0.2

<Button>:
    font_name: 'BoonJot-Italic'
    background_color: app.pastel_pink  # Pastel Pink
    color: app.dark_text  # Dark Text
    font_size: 16

<Label>:
    font_name: 'BoonJot-Italic'
    color: app.dark_text  # Dark Text
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    font_size: 16
