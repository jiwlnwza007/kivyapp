<TodoLayout>:
    orientation: 'vertical'
    
    # ใช้ BoxLayout แทน ActionBar เพื่อจัดเรียงปุ่ม
    BoxLayout:
        size_hint: 1, None
        height: 50
        padding: 10

        Button:
            text: 'เพิ่มงาน'
            on_press: app.add_task(root.ids.task_input.text)
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย
        
        Button:
            text: 'ลบงานทั้งหมด'
            on_press: app.clear_tasks(None)
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย

    TextInput:
        id: task_input
        hint_text: 'กรุณากรอกงานใหม่'
        size_hint: 1, None
        height: 40
        on_text_validate: app.add_task(task_input.text)
        font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย
    
    ScrollView:
        size_hint: 1, 1
        
        BoxLayout:
            id: task_layout
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
    
    GridLayout:
        cols: 2
        size_hint_y: None
        height: 100
        
        Label:
            text: "จัดเรียงตาม:"
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย
        
        Spinner:
            text: "ชื่อ"
            values: ("ชื่อ", "วันที่")
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย
        
        Label:
            text: "เปิดการแจ้งเตือน"
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย
        
        Switch:
            active: True
            font_name: 'Sarabun'  # ใช้ฟอนต์ที่รองรับภาษาไทย

